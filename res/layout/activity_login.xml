<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">
    <View 
        android:id="@+id/center_divider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:id="@+id/rl_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/login_rl_bg"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <!-- username -->
        <EditText 
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/transparent"
            android:hint="用户名"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:textColorHint="@color/black_hint"/>
        <!-- divider -->
        <View
            android:id="@+id/rl_dividers"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/login_username"
            android:background="@color/black_dividers"/>
        <!-- password -->
        <EditText 
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/rl_dividers"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/transparent"
            android:inputType="textPassword"
            android:hint="密码"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:textColorHint="@color/black_hint"/>
    </RelativeLayout>
    <!-- title -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_input">
        <ImageView 
            android:src="@drawable/login_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:scaleType="fitCenter"/>
    </RelativeLayout>
    <!-- bottom -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_input">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp">

            <com.material.widget.RaisedButton
                android:id="@+id/login_btnlogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_btnlogin_bg"
                android:text="登录"
                android:textSize="18sp"
                android:textColor="@color/white_text"/>
            <ProgressBar
                android:id="@+id/pb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:indeterminate="true"
                android:visibility="gone" />
        </RelativeLayout>
        <Button 
            android:id="@+id/login_btn_cant_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/transparent"
            android:text="无法登陆"
            android:textSize="16sp"
            android:textColor="@color/blue_500"/>
		<Button 
            android:id="@+id/login_btn_new_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/transparent"
            android:text="新用户"
            android:textSize="16sp"
            android:textColor="@color/blue_500"/>
        
	</RelativeLayout>
</RelativeLayout>