<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey">
    <!-- HEAD -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="2"
	    android:background="@color/blue"
	    android:orientation="horizontal">
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center">
	        <ImageButton
	            android:id="@+id/register_btnback"
	            android:src="@drawable/back_icon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@color/trans"
	            android:scaleType="fitCenter"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:gravity="center">
			<TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/register_title"
			    android:textSize="@dimen/bar_title_text"
			    android:textColor="@color/white"/>	        
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	    </LinearLayout>
	</LinearLayout>
	<!-- BODY -->
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="16">
		<FrameLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent">
			<!-- First Step -->
			<LinearLayout
			    android:id="@+id/register_layout_first"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical">
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/white"
				    android:layout_marginTop="@dimen/register_layout_margin">
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight="4"
				        android:gravity="center"
				        android:background="@drawable/register_row_bg"
				        android:paddingTop="@dimen/register_padding"
				        android:paddingBottom="@dimen/register_padding">
				        <TextView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/register_username"
				            android:textSize="@dimen/register_common_text"
				            android:textColor="@color/blue"/>
				    </LinearLayout>
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="5"
				        android:orientation="horizontal">
				        <LinearLayout 
				            android:layout_width="0dp"
				            android:layout_height="0dp"
				            android:focusable="true"
				            android:focusableInTouchMode="true"/>				        
				        <EditText
				            android:id="@+id/register_username"
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:gravity="center"
				            android:textColor="@color/black"
				            android:background="@color/trans"/>
				    </LinearLayout>
				</LinearLayout>
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/white"
				    android:layout_marginTop="@dimen/register_layout_margin">
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight="4"
				        android:gravity="center"
				        android:background="@drawable/register_row_bg"
				        android:paddingTop="@dimen/register_padding"
				        android:paddingBottom="@dimen/register_padding">
				        <TextView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/register_password"
				            android:textSize="@dimen/register_common_text"
				            android:textColor="@color/blue"/>
				    </LinearLayout>
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="5">
				        <EditText
				            android:id="@+id/register_password_1"
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:gravity="center"
				            android:textColor="@color/black"
				            android:background="@color/trans"
				            android:inputType="textPassword"/>
				    </LinearLayout>
				</LinearLayout>
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/white"
				    android:layout_marginTop="@dimen/register_layout_margin">
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight="4"
				        android:gravity="center"
				        android:background="@drawable/register_row_bg"
				        android:paddingTop="@dimen/register_padding"
				        android:paddingBottom="@dimen/register_padding">
				        <TextView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/register_confirm_password"
				            android:textSize="@dimen/register_common_text"
				            android:textColor="@color/blue"/>
				    </LinearLayout>
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="5">
				        <EditText
				            android:id="@+id/register_password_2"
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:gravity="center"
				            android:textColor="@color/black"
				            android:background="@color/trans"
				            android:inputType="textPassword"/>
				    </LinearLayout>
				</LinearLayout>
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:layout_marginTop="@dimen/register_layout_margin">
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="@dimen/register_button_height"
				        android:layout_weight="1">
				    </LinearLayout>
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="@dimen/register_button_height"
				        android:layout_weight="9">
				        <Button
				            android:id="@+id/register_btnnextstep"
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:background="@drawable/register_button_bg"
				            android:text="@string/register_next_step"
				            android:textColor="@color/white"
				            android:textSize="@dimen/register_common_text"/>
				    </LinearLayout>
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="@dimen/register_button_height"
				        android:layout_weight="1">
				    </LinearLayout>
				</LinearLayout>
		    </LinearLayout>
		    <!-- Second Step -->
		    <LinearLayout
		        android:visibility="gone"
		        android:id="@+id/register_layout_second"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical">
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/white"
				    android:layout_marginTop="@dimen/register_layout_margin">
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight="4"
				        android:gravity="center"
				        android:background="@drawable/register_row_bg"
				        android:paddingTop="@dimen/register_padding"
				        android:paddingBottom="@dimen/register_padding">
				        <TextView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/register_name"
				            android:textSize="@dimen/register_common_text"
				            android:textColor="@color/blue"/>
				    </LinearLayout>
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="5">
				        <EditText
				            android:id="@+id/register_name"
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:gravity="center"
				            android:textColor="@color/black"
				            android:background="@color/trans"/>
				    </LinearLayout>
				</LinearLayout>
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/white"
				    android:layout_marginTop="@dimen/register_layout_margin">
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight="4"
				        android:gravity="center"
				        android:background="@drawable/register_row_bg"
				        android:paddingTop="@dimen/register_padding"
				        android:paddingBottom="@dimen/register_padding">
				        <TextView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/register_tel"
				            android:textSize="@dimen/register_common_text"
				            android:textColor="@color/blue"/>
				    </LinearLayout>
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="5">
				        <EditText
				            android:id="@+id/register_tel"
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:gravity="center"
				            android:textColor="@color/black"
				            android:background="@color/trans"/>
				    </LinearLayout>
				</LinearLayout>
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/white"
				    android:layout_marginTop="@dimen/register_layout_margin">
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight="4"
				        android:gravity="center"
				        android:background="@drawable/register_row_bg"
				        android:paddingTop="@dimen/register_padding"
				        android:paddingBottom="@dimen/register_padding">
				        <TextView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/register_address"
				            android:textSize="@dimen/register_common_text"
				            android:textColor="@color/blue"/>
				    </LinearLayout>
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="5">
						<EditText
				            android:id="@+id/register_address"
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:gravity="center"
				            android:textColor="@color/black"
				            android:background="@color/trans"/>				        
				    </LinearLayout>
				</LinearLayout>
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:layout_marginTop="@dimen/register_layout_margin">
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="@dimen/register_button_height"
				        android:layout_weight="1">
				    </LinearLayout>
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="@dimen/register_button_height"
				        android:layout_weight="9">
				        <Button
				            android:id="@+id/register_btnfinish"
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:background="@drawable/register_button_bg"
				            android:text="@string/register_finish"
				            android:textColor="@color/white"
				            android:textSize="@dimen/register_common_text"/>
				    </LinearLayout>
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="@dimen/register_button_height"
				        android:layout_weight="1">
				    </LinearLayout>
				</LinearLayout>
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:padding="@dimen/register_padding"
				    android:layout_marginTop="@dimen/register_layout_margin">
					<TextView 
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:text="@string/register_warn"
					    android:textColor="@color/light_black"
					    android:textSize="@dimen/register_small_text"/>
				</LinearLayout>
		    </LinearLayout>
		</FrameLayout>
	</ScrollView>
</LinearLayout>