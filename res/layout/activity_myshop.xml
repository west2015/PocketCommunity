<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@color/blue"
        android:orientation="horizontal">
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
			<ImageButton
			    android:id="@+id/myshop_btn_back"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:src="@drawable/back_icon"
			    android:scaleType="fitCenter"
			    android:background="@color/trans"/>	        
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:gravity="center">
			<TextView
			    android:id="@+id/main_text_title"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/shop_myshop"
			    android:textSize="@dimen/bar_title_text"
			    android:textColor="@color/white"/>	        
	    </LinearLayout>
		<LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center">
	    </LinearLayout>      
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/dark_grey"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="3"
	    android:orientation="horizontal"
	    android:background="@color/white">
		<FrameLayout 
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1">
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="vertical">
			    <ImageView
			        android:id="@+id/myshop_img_order"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_weight="5"
			        android:src="@drawable/myshop_order_no_icon"
			        android:scaleType="fitCenter"/>
			    <TextView
			        android:id="@+id/myshop_txt_order"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_weight="2"
			        android:gravity="center"
			        android:text="@string/myshop_order"
			        android:textColor="@color/dark_grey"
			        android:textSize="@dimen/myshop_btn_textsize"/>
			</LinearLayout>
			<Button
			    android:id="@+id/myshop_btn_order"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:background="@color/trans"/>
		</FrameLayout>
		<FrameLayout 
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1">
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="vertical">
			    <ImageView
				    android:id="@+id/myshop_img_good"			        
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_weight="5"
			        android:src="@drawable/myshop_good_no_icon"
			        android:scaleType="fitCenter"/>
			    <TextView
				    android:id="@+id/myshop_txt_good"			        
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_weight="2"
			        android:gravity="center"
			        android:text="@string/myshop_good"
			        android:textColor="@color/dark_grey"
			        android:textSize="@dimen/myshop_btn_textsize"/>
			</LinearLayout>
			<Button 
			    android:id="@+id/myshop_btn_good"			    
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:background="@color/trans"/>
		</FrameLayout>
		<FrameLayout 
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1">
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="vertical">
			    <ImageView
				    android:id="@+id/myshop_img_add"			        
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_weight="5"
			        android:src="@drawable/myshop_add_no_icon"
			        android:scaleType="fitCenter"/>
			    <TextView
				    android:id="@+id/myshop_txt_add"			        
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_weight="2"
			        android:gravity="center"
			        android:text="@string/myshop_add"
			        android:textColor="@color/dark_grey"
			        android:textSize="@dimen/myshop_btn_textsize"/>
			</LinearLayout>
			<Button
			    android:id="@+id/myshop_btn_add"			    
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:background="@color/trans"/>
		</FrameLayout>
	</LinearLayout>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/dark_grey"/>
	<FrameLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="11.5"
	    android:background="@color/trans">
		<com.handmark.pulltorefresh.library.PullToRefreshListView
		    android:id="@+id/myshop_list_order"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"/>
		<com.handmark.pulltorefresh.library.PullToRefreshListView 
		    android:id="@+id/myshop_list_good"
		    android:visibility="gone"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"/>
		<ScrollView
		    android:id="@+id/myshop_layout_add"
		    android:visibility="gone"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="@color/dark_grey">
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical">
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/white">
					<!-- Left -->
					<ImageButton
					    android:layout_width="0dp"
					    android:layout_height="wrap_content"
					    android:layout_weight="5"
					    android:src="@drawable/add_image_icon"
					    android:scaleType="fitCenter"
					    android:background="@color/trans"/>
					<!-- Right -->
					<LinearLayout 
					    android:layout_width="0dp"
					    android:layout_height="match_parent"
					    android:layout_weight="6"
					    android:orientation="vertical"
					    android:gravity="center">
					    <EditText 
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:hint="@string/myshop_good_name"
					        android:textColor="@color/black"
					        android:textColorHint="@color/dark_grey"
					        android:textSize="@dimen/myshop_btn_textsize"
					        android:gravity="center"
					        android:layout_marginTop="@dimen/shop_margin_top"/>
					    <EditText 
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:hint="@string/myshop_price"
					        android:textColor="@color/black"
					        android:textColorHint="@color/dark_grey"
					        android:textSize="@dimen/myshop_btn_textsize"
					        android:gravity="center"
					        android:layout_marginTop="@dimen/shop_margin_top"
					        android:inputType="numberDecimal"/>
					</LinearLayout>	    
				</LinearLayout>
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="@dimen/property_repair_btnheight"
				    android:orientation="horizontal"
				    android:background="@color/white"
				    android:gravity="center_vertical">
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="1"/>
				    <Button 
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight="4"
				        android:padding="@dimen/shop_padding"
				        android:background="@drawable/btn_cancel"
				        android:text="@string/myshop_reset"
				        android:textSize="@dimen/property_repair_text_size"
				        android:textColor="@color/white"/>
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="1"/>
					<Button
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight="4"
				        android:padding="@dimen/shop_padding"
				        android:background="@drawable/btn_submit"
				        android:text="@string/myshop_finish"
				        android:textSize="@dimen/property_repair_text_size"
				        android:textColor="@color/white"/>			    
				    <LinearLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="1"/>
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</FrameLayout>
</LinearLayout>