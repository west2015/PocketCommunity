<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@color/blue"
        android:orientation="horizontal">
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        <ImageButton
	            android:id="@+id/activity_detail_btn_back"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:src="@drawable/back_icon"
			    android:scaleType="fitCenter"
			    android:background="@color/trans"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:gravity="center">
			<TextView
			    android:id="@+id/activity_detail_txt_title"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:ellipsize="end"
			    android:maxLines="1"
			    android:text="标题：瑶池要吃药"
			    android:textSize="@dimen/activity_detail_testsize_title"
			    android:textColor="@color/white"/>	        
	    </LinearLayout>
		<LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center">
			<ImageButton
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:src="@drawable/add_activity_icon"
			    android:scaleType="fitCenter"
			    android:background="@color/trans"/>
	    </LinearLayout>      
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15.5"
        android:orientation="vertical">
	    <com.handmark.pulltorefresh.library.PullToRefreshListView 
	        android:id="@+id/activity_detail_listview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@color/grey"
	        android:divider="@color/trans"
	        android:dividerPadding="1dp"/>
    </LinearLayout>
</LinearLayout>
