<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<!-- BODY -->
	<android.support.v4.view.ViewPager
	    android:id="@+id/main_viewpager"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="14"
	    android:background="@color/white">
	</android.support.v4.view.ViewPager>
	<!-- BOTTOM -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1.5"
	    android:background="@drawable/main_bottom_bg"
	    android:orientation="horizontal">
		<FrameLayout 
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1">
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="vertical">
				<ImageView
				    android:id="@+id/main_img_notice"
			        android:src="@drawable/main_icon_1"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_weight="7"
			        android:scaleType="fitCenter"/>
				<TextView
				    android:id="@+id/main_txt_notice"
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="2"
				    android:text="@string/main_notice_title"
				    android:textColor="@color/black_grey"
				    android:gravity="center_horizontal|top"
				    android:textSize="@dimen/main_title_text"/>				
		    </LinearLayout>
		    <Button
		        android:id="@+id/main_btn_notice"
		        android:layout_width="match_parent"
		       	android:layout_height="match_parent"
		       	android:background="@color/trans"/>
		</FrameLayout>
		<FrameLayout 
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1">
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="vertical">
				<ImageView
				    android:id="@+id/main_img_property"
			        android:src="@drawable/property_icon_1"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_weight="7"
			        android:scaleType="fitCenter"/>
				<TextView
				    android:id="@+id/main_txt_property"
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="2"
				    android:text="@string/main_property_title"
				    android:textColor="@color/black_grey"
				    android:gravity="center_horizontal|top"
				    android:textSize="@dimen/main_title_text"/>				
		    </LinearLayout>
		    <Button
		        android:id="@+id/main_btn_property"
		        android:layout_width="match_parent"
		       	android:layout_height="match_parent"
		       	android:background="@color/trans"/>
		</FrameLayout>
		<FrameLayout 
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1">
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="vertical">
				<ImageView
				    android:id="@+id/main_img_shop"
			        android:src="@drawable/shop_icon_1"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_weight="7"
			        android:scaleType="fitCenter"/>
				<TextView
				    android:id="@+id/main_txt_shop"
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="2"
				    android:text="@string/main_shop_title"
				    android:textColor="@color/black_grey"
				    android:gravity="center_horizontal|top"
				    android:textSize="@dimen/main_title_text"/>				
		    </LinearLayout>
		    <Button
		        android:id="@+id/main_btn_shop"
		        android:layout_width="match_parent"
		       	android:layout_height="match_parent"
		       	android:background="@color/trans"/>
		</FrameLayout>
		<FrameLayout 
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1">
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="vertical">
				<ImageView
				    android:id="@+id/main_img_activity"
			        android:src="@drawable/activity_icon_1"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_weight="7"
			        android:scaleType="fitCenter"/>
				<TextView
				    android:id="@+id/main_txt_activity"
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="2"
				    android:text="@string/main_activity_title"
				    android:textColor="@color/black_grey"
				    android:gravity="center_horizontal|top"
				    android:textSize="@dimen/main_title_text"/>				
		    </LinearLayout>
		    <Button
		        android:id="@+id/main_btn_activity"
		        android:layout_width="match_parent"
		       	android:layout_height="match_parent"
		       	android:background="@color/trans"/>
		</FrameLayout>						
		<FrameLayout 
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1">
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="vertical">
				<ImageView
				    android:id="@+id/main_img_setting"
			        android:src="@drawable/setting_icon_1"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_weight="7"
			        android:scaleType="fitCenter"/>
				<TextView
				    android:id="@+id/main_txt_setting"
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="2"
				    android:text="@string/main_setting_title"
				    android:textColor="@color/black_grey"
				    android:gravity="center_horizontal|top"
				    android:textSize="@dimen/main_title_text"/>				
		    </LinearLayout>
		    <Button
		        android:id="@+id/main_btn_setting"
		        android:layout_width="match_parent"
		       	android:layout_height="match_parent"
		       	android:background="@color/trans"/>
		</FrameLayout>
	</LinearLayout>
</LinearLayout>