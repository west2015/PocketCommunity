<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/shop_padding"
    android:background="@color/white">
	<!-- Left -->
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="3">
	    <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/test"
	        android:scaleType="fitCenter"/>
	</LinearLayout>
	<!-- Middle -->
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="10"
	    android:orientation="vertical"
	    android:padding="@dimen/shop_padding">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal">
	        <TextView
	            android:id="@+id/myshop_order_user"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="2"
	            android:gravity="center_vertical"
	            android:maxLines="1"
	            android:ellipsize="end"
	            android:text="McGinn"
	            android:textColor="@color/black"
	            android:textSize="@dimen/myshop_textsize"/>
	        <TextView 
	            android:id="@+id/myshop_order_time"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center_vertical|right"
	            android:text="10:03"
	            android:textColor="@color/grey_700"
	            android:textSize="@dimen/myshop_textsize"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="vertical">
	        <TextView
	            android:id="@+id/myshop_order_address"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical"
	            android:text="29号楼505"
	            android:textColor="@color/black"
	            android:textSize="@dimen/myshop_textsize"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal">
	        <TextView
	            android:id="@+id/myshop_order_total"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="2"
	            android:gravity="center_vertical"
	            android:maxLines="1"
	            android:ellipsize="end"
	            android:text="总价:￥29.5"
	            android:textColor="@color/red_500"
	            android:textSize="@dimen/myshop_textsize"/>
	        <TextView 
	            android:id="@+id/myshop_order_status"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center_vertical|right"
	            android:text="等待中"
	            android:textColor="@color/red_500"
	            android:textSize="@dimen/myshop_textsize_status"/>
	    </LinearLayout>
	</LinearLayout>
	<!-- Right -->
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1">
	    <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/detail_icon"
	        android:scaleType="fitCenter"/>
	</LinearLayout>
</LinearLayout>
